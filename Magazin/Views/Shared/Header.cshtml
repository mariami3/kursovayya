
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BookMagazin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Пользователь"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Catalog" asp-action="Catalog">Каталог</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Favorites" asp-action="Favorite">Избранное</a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Basket" asp-action="Cart">Корзина</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="List">Заказы</a>
                        </li>
                    }
                    
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Админ"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Catalog" asp-action="Catalog">Каталог</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Admin" asp-action="Main">Управление</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Statistics" asp-action="Index">Статистика</a>
                        </li>

                    }
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Менеджер"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Manager" asp-action="Analytics">Аналитика</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Manager" asp-action="Orders">Заказы</a>
                        </li>
                    }


                </ul>
                <div class="d-flex">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <span class="navbar-text me-2">@User.Identity.Name</span>
                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-register me-2 nav-link text-dark">Выход</button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-register me-2 nav-link text-dark" asp-controller="Account" asp-action="Autorization">Вход</a>
                        <a class="btn btn-login" asp-area="" asp-controller="Account" asp-action="Register">Регистрация</a>
                    }
                </div>

            </div>
        </div>
    </nav>>
</header>
