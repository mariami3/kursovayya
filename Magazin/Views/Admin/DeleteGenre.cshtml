@model Magazin.Models.Genre
@{
    ViewData["Title"] = "Удалить жанр";
}
<div class="container py-4">
    <h2 class="fw-bold text-center mb-4 text-danger">🗑 Удалить жанр</h2>

    <div class="alert alert-warning text-center">
        Вы уверены, что хотите удалить жанр <b>@Model.NameGenre</b>?
    </div>

    <form asp-action="DeleteGenre" method="post" class="text-center">
        <input type="hidden" asp-for="IdGenre" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-action="Genres" class="btn btn-secondary">Отмена</a>
    </form>
</div>
