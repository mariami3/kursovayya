@model Magazin.Models.Adaptation
<div class="container py-4">
    <h2 class="fw-bold text-center mb-4 text-danger">🗑 Удалить экранизацию</h2>
    <div class="alert alert-warning text-center">
        Удалить экранизацию <b>@Model.Title</b> (@Model.ReleaseYear)?
    </div>
    <form asp-action="DeleteAdaptation" method="post" class="text-center">
        <input type="hidden" asp-for="IdAdaptation" />
        <button class="btn btn-danger">Удалить</button>
        <a asp-action="Adaptations" class="btn btn-secondary">Отмена</a>
    </form>
</div>
