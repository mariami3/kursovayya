@model Magazin.Models.User
<div class="container py-4">
    <h2 class="fw-bold text-center mb-4 text-danger">🗑 Удалить пользователя</h2>
    <div class="alert alert-warning text-center">
        Удалить пользователя <b>@Model.LoginUser</b>?
    </div>
    <form asp-action="DeleteUser" method="post" class="text-center">
        <input type="hidden" asp-for="IdUser" />
        <button class="btn btn-danger">Удалить</button>
        <a asp-action="Users" class="btn btn-secondary">Отмена</a>
    </form>
</div>
