@model Magazin.Models.Order

<div class="container py-4">
    <h2 class="fw-bold text-center mb-4">✏ Изменение статуса заказа</h2>

    <div class="card shadow-sm p-4">
        <form asp-action="UpdateStatus" method="post">
            <input type="hidden" name="id" value="@Model.IdOrder" />

            <div class="mb-3">
                <label class="form-label">Заказ №</label>
                <input type="text" class="form-control" value="@Model.IdOrder" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Пользователь</label>
                <input type="text" class="form-control" value="@Model.UserId" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Текущий статус</label>
                <input type="text" class="form-control" value="@Model.StatusOrders" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Новый статус</label>
                <select name="newStatus" class="form-select">
                    <option value="В обработке" selected>В обработке</option>
                    <option value="Собран">Собран</option>
                    <option value="Передан в доставку">Передан в доставку</option>
                    <option value="Доставлен">Доставлен</option>
                    <option value="Отменён">Отменён</option>
                </select>
            </div>

            <div class="d-flex justify-content-between">
                <a class="btn btn-secondary" asp-action="Orders">⬅ Назад</a>
                <button type="submit" class="btn btn-success">💾 Сохранить</button>
            </div>
        </form>
    </div>
</div>
