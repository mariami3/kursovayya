@model IEnumerable<Magazin.Models.Book>

@{
    ViewData["Title"] = "Каталог книг";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #f8f9fa, #eef2f7);
        min-height: 100vh;
        margin: 0;
        color: #333;
    }

    .container {
        max-width: 1200px;
    }

    .catalog-header {
        text-align: center;
        margin-bottom: 40px;
        padding: 20px 0;
    }

    .book-icon {
        color: #4a7fd4;
        margin-bottom: 20px;
        filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0) rotate(0deg);
        }

        50% {
            transform: translateY(-20px) rotate(180deg);
        }
    }

    .book-icon {
        animation: float 6s ease-in-out infinite;
    }

    h2 {
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 10px;
    }

    .catalog-subtitle {
        color: #718096;
        font-size: 1.1rem;
    }

    /* Карточки */
    .card {
        border: none;
        border-radius: 1rem;
        background: #fff;
        box-shadow: 0 6px 16px rgba(0,0,0,0.08);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border: 1px solid #e2e8f0;
    }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 24px rgba(0,0,0,0.12);
        }

    /* Кнопки */
    .btn {
        border-radius: 2rem;
        font-weight: 500;
        padding: 0.6rem 1.2rem;
        transition: all 0.3s ease;
        border: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, #4a7fd4, #3a6bc9);
        color: #fff;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #5a8fe4, #4a7fd4);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(74, 127, 212, 0.3);
        }

    .btn-success {
        background: linear-gradient(135deg, #48bb78, #38a169);
        color: #fff;
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #38a169, #2f855a);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(72, 187, 120, 0.3);
        }

    .btn-warning {
        background: linear-gradient(135deg, #f6ad55, #ed8936);
        color: #fff;
    }

        .btn-warning:hover {
            background: linear-gradient(135deg, #ed8936, #dd6b20);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(246, 173, 85, 0.3);
        }

    .btn-outline-primary {
        border: 2px solid #4a7fd4;
        color: #4a7fd4;
        background: transparent;
    }

        .btn-outline-primary:hover {
            background: #4a7fd4;
            color: white;
            transform: translateY(-2px);
        }

    /* Поля ввода */
    .form-control, .form-select {
        border-radius: 0.75rem;
        border: 2px solid #e2e8f0;
        padding: 0.65rem 1rem;
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
        color: #4a5568;
    }

        .form-control:focus, .form-select:focus {
            border-color: #4a7fd4;
            box-shadow: 0 0 0 3px rgba(74, 127, 212, 0.1);
            outline: none;
        }

        .form-control::placeholder {
            color: #a0aec0;
        }

    /* Ссылки */
    a {
        color: #4a7fd4;
        text-decoration: none;
        transition: color 0.2s ease;
    }

        a:hover {
            color: #3a6bc9;
            text-decoration: underline;
        }

    /* Сообщения */
    .alert {
        border-radius: 0.75rem;
        padding: 0.75rem 1.2rem;
        font-size: 0.9rem;
        border: none;
    }

    .alert-warning {
        background: linear-gradient(135deg, #fef3c7, #fde68a);
        color: #92400e;
        border: 1px solid #fcd34d;
    }

    /* Цена */
    .text-success {
        color: #38a169 !important;
    }

    .text-muted {
        color: #718096 !important;
    }

    /* Иконки в фильтрах */
    .form-control::placeholder {
        color: #a0aec0;
    }

    /* Адаптивность */
    @@media (max-width: 768px) {
        .catalog-header {
            margin-bottom: 20px;
        }

        .row.g-3 {
            gap: 1rem !important;
        }

        .btn {
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
        }
    }

    /* Анимация загрузки */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .col {
        animation: fadeIn 0.5s ease-out;
    }
</style>

<div class="container py-4">
    <div class="catalog-header">
        <div class="book-icon">
            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M4 19.5C4 18.837 4.26339 18.2011 4.73223 17.7322C5.20107 17.2634 5.83696 17 6.5 17H20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M6.5 2H20V22H6.5C5.83696 22 5.20107 21.7366 4.73223 21.2678C4.26339 20.7989 4 20.163 4 19.5V4.5C4 3.83696 4.26339 3.20107 4.73223 2.73223C5.20107 2.26339 5.83696 2 6.5 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
        </div>
        <h2 class="fw-bold">Каталог книг</h2>
        <p class="catalog-subtitle">Откройте для себя мир увлекательных историй</p>
    </div>

    <!-- Панель фильтров -->
    <form method="get" class="mb-4">
        <div class="row g-3 align-items-center">
            <div class="col-md-3">
                <select name="genreId" class="form-select">
                    <option value="">Все жанры</option>
                    @foreach (var genre in (IEnumerable<SelectListItem>)ViewBag.GenreOptions)
                    {
                        <option value="@genre.Value" selected="@genre.Selected">@genre.Text</option>
                    }
                </select>
            </div>

            <div class="col-md-4">
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="🔍 Поиск по названию" />
            </div>

            <div class="col-md-3">
                <select name="sortOrder" class="form-select">
                    <option value="">Сортировка</option>
                    <option value="PriceAsc" selected="@(ViewBag.SortOrder == "PriceAsc")">💲 Цена ↑</option>
                    <option value="PriceDesc" selected="@(ViewBag.SortOrder == "PriceDesc")">💲 Цена ↓</option>
                </select>
            </div>

            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Применить</button>
            </div>
        </div>
    </form>

    <!-- Список книг -->
    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">Книги не найдены 📭</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var book in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 rounded-3 position-relative">
                        <!-- Картинка книги -->
                        <img src="@(string.IsNullOrEmpty(book.BookUrl) ? "/images/no-image.png" : book.BookUrl)"
                             class="card-img-top" alt="@book.Title"
                             style="width: 100%; max-height: 250px; object-fit: contain; border-top-left-radius: 1rem; border-top-right-radius: 1rem; background-color: #f8f9fa;" />

                        <!-- Кнопка избранного в правом верхнем углу -->
                        <form asp-controller="Favorites" asp-action="AddToFavorites" method="post" class="position-absolute top-0 end-0 m-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="bookId" value="@book.IdBook" />
                            <button type="submit" class="btn btn-warning btn-sm rounded-circle shadow" style="width: 36px; height: 36px; display: flex; align-items: center; justify-content: center;">
                                ⭐
                            </button>
                        </form>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">@book.Title</h5>
                            <p class="card-text text-muted">Автор: @(book.Author?.NameAuthor ?? "Не указан")</p>
                            <!-- Цена с символом рубля -->
                            <p class="fs-5 fw-semibold text-success">@book.Price.ToString("0.00") ₽</p>

                            <!-- Кнопки -->
                            <div class="mt-auto d-flex gap-2">
                                <a asp-action="DetailsBook" asp-route-id="@book.IdBook" class="btn btn-outline-primary btn-sm flex-grow-1">Подробнее</a>
                                <form asp-controller="Basket" asp-action="AddToCart" method="post" class="d-inline flex-grow-1">
                                    <input type="hidden" name="bookId" value="@book.IdBook" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="btn btn-success btn-sm w-100">🛒 В корзину</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>